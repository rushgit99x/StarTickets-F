@model StarTickets.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmation";
    var hasPaymentPending = Model.PaymentStatus == PaymentStatus.Pending;
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/BookingConfirmation.css" rel="stylesheet">
    <style>
        .ticket-container {
            margin-bottom: 2rem;
        }

        .ticket-preview {
            background: #f8fafc;
            border: 2px dashed #cbd5e1;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
        }

            .ticket-preview:hover {
                border-color: #2563eb;
                box-shadow: 0 4px 12px rgba(37, 99, 235, 0.15);
            }

        .ticket-image {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin-bottom: 1rem;
        }

        .loading-placeholder {
            width: 100%;
            height: 200px;
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
            border-radius: 8px;
        }

        @@keyframes loading {
            0% {
                background-position: 200% 0;
            }
            100% {
                background-position: -200% 0;
            }
        }

        .ticket-actions {
            margin-top: 1rem;
        }

        .ticket-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .ticket-number-badge {
            background: linear-gradient(135deg, #2563eb, #0ea5e9);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .form-label2 {
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 0.5rem;
        }

        .card-input {
            font-family: 'Courier New', monospace;
            font-size: 1.1rem;
        }

        .alert-payment-success {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-weight: 500;
        }

        .alert-payment-error {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-weight: 500;
        }

        .loading-spinner {
            display: none;
        }

        .ticket-category-item {
            padding: 1rem 0;
            border-bottom: 1px solid #f1f5f9;
        }

        .ticket-category-item:last-child {
            border-bottom: none;
        }

        .booking-header {
            background: linear-gradient(135deg, #2563eb, #0ea5e9);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .booking-card {
            border: none;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
        }

        .booking-card .card-header {
            border-bottom: 1px solid #e2e8f0;
            padding: 1.5rem;
            border-radius: 12px 12px 0 0;
        }

        .booking-card .card-body {
            padding: 1.5rem;
        }

        .sidebar-actions {
            position: sticky;
            top: 2rem;
        }
    </style>
}

<div class="booking-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-ticket-alt me-3"></i>Booking Confirmation</h1>
                @if (hasPaymentPending)
                {
                    <p class="mb-0 mt-2">Complete your ticket purchase</p>
                }
                else
                {
                    <p class="mb-0 mt-2">Payment completed successfully</p>
                }
            </div>
            <div class="col-md-4 text-md-end">
                @if (hasPaymentPending)
                {
                    <div class="badge bg-warning fs-6 p-2">
                        <i class="fas fa-clock me-2"></i>
                        <span id="countdown">15:00</span>
                    </div>
                }
                else
                {
                    <div class="badge bg-success fs-6 p-2">
                        <i class="fas fa-check me-2"></i>Paid
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["PaymentSuccess"] != null)
    {
        <div class="alert-payment-success">
            <i class="fas fa-check-circle me-2"></i>@TempData["PaymentSuccess"]
        </div>
    }

    @if (TempData["PaymentError"] != null)
    {
        <div class="alert-payment-error">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["PaymentError"]
        </div>
    }

    <!-- Booking Summary -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card booking-card mb-4">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Event Details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="text-primary">@Model.Event.EventName</h4>
                            <p class="text-muted mb-2"><i class="fas fa-map-marker-alt me-2"></i>@Model.Event.Venue.VenueName</p>
                            <p class="text-muted mb-2"><i class="fas fa-calendar me-2"></i>@Model.Event.EventDate.ToString("MMMM dd, yyyy - h:mm tt")</p>
                            <p class="text-muted"><i class="fas fa-tag me-2"></i>@Model.Event.Category.CategoryName</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="badge bg-@(Model.Event.Status == EventStatus.Published ? "success" : "secondary") fs-6 p-2 mb-2">
                                @Model.Event.Status.ToString()
                            </div>
                            <br>
                            <small class="text-muted">Booking Ref: <strong>@Model.BookingReference</strong></small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ticket Summary -->
            <div class="card booking-card mb-4">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-list me-2"></i>Ticket Summary</h3>
                </div>
                <div class="card-body">
                    @foreach (var detail in Model.BookingDetails)
                    {
                        <div class="ticket-category-item">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h6 class="mb-1">@detail.TicketCategory.CategoryName</h6>
                                    <small class="text-muted">@detail.TicketCategory.Description</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    <span class="badge bg-primary">@detail.Quantity Ticket@(detail.Quantity > 1 ? "s" : "")</span>
                                </div>
                                <div class="col-md-3 text-end">
                                    <strong>$@detail.UnitPrice.ToString("F2") × @detail.Quantity = $@detail.TotalPrice.ToString("F2")</strong>
                                </div>
                            </div>
                        </div>
                    }

                    <hr style="border-color: #475569;">
                    
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="row">
                            <div class="col-md-9 text-end">
                                <strong>Subtotal:</strong>
                            </div>
                            <div class="col-md-3 text-end">
                                <strong>$@Model.TotalAmount.ToString("F2")</strong>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-9 text-end">
                                <strong class="text-success">Discount (@Model.PromoCodeUsed):</strong>
                            </div>
                            <div class="col-md-3 text-end">
                                <strong class="text-success">-$@Model.DiscountAmount.ToString("F2")</strong>
                            </div>
                        </div>
                        <hr style="border-color: #475569;">
                    }
                    
                    <div class="row">
                        <div class="col-md-9 text-end">
                            <h5 class="text-primary"><strong>Final Amount:</strong></h5>
                        </div>
                        <div class="col-md-3 text-end">
                            <h5 class="text-primary"><strong>$@Model.FinalAmount.ToString("F2")</strong></h5>
                        </div>
                    </div>
                </div>
            </div>

            @if (hasPaymentPending)
            {
                <!-- Payment Form -->
                <div class="payment-section" id="paymentSection">
                    <h4 class="mb-4"><i class="fas fa-credit-card me-2"></i>Payment Information</h4>
                    <form id="paymentForm" asp-action="ProcessPayment" asp-controller="Booking" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="BookingId" value="@Model.BookingId" />
                        <input type="hidden" name="Amount" value="@Model.FinalAmount" />

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="cardNumber" class="form-label2">Card Number</label>
                                <input type="text" class="form-control card-input" id="cardNumber" name="CardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required>
                                <div class="invalid-feedback">Please provide a valid card number.</div>
                                <small class="form-text text-muted">Test cards: 4111111111111111 (success), 4000000000000002 (fail)</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="expiryDate" class="form-label2">Expiry Date</label>
                                <input type="text" class="form-control" id="expiryDate" name="ExpiryDate" placeholder="MM/YY" maxlength="5" required>
                                <div class="invalid-feedback">Please provide a valid expiry date.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cvv" class="form-label2">CVV</label>
                                <input type="text" class="form-control" id="cvv" name="CVV" placeholder="123" maxlength="4" required>
                                <div class="invalid-feedback">Please provide a valid CVV.</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="cardName" class="form-label2">Cardholder Name</label>
                                <input type="text" class="form-control" id="cardName" name="CardName" placeholder="John Doe" required>
                                <div class="invalid-feedback">Please provide the cardholder's name.</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="billingAddress" class="form-label2">Billing Address</label>
                                <input type="text" class="form-control" id="billingAddress" name="BillingAddress" placeholder="123 Main Street" required>
                                <div class="invalid-feedback">Please provide a billing address.</div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="city" class="form-label2">City</label>
                                <input type="text" class="form-control" id="city" name="City" placeholder="New York" required>
                                <div class="invalid-feedback">Please provide a city.</div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="zipCode" class="form-label2">ZIP Code</label>
                                <input type="text" class="form-control" id="zipCode" name="ZipCode" placeholder="10001" required>
                                <div class="invalid-feedback">Please provide a ZIP code.</div>
                            </div>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="termsCheck" required>
                            <label class="form-check-label" for="termsCheck">
                                I agree to the <a href="#" class="text-primary">Terms and Conditions</a> and <a href="#" class="text-primary">Privacy Policy</a>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <span class="btn-text">
                                <i class="fas fa-lock me-2"></i>Complete Payment - $@Model.FinalAmount.ToString("F2")
                            </span>
                            <div class="loading-spinner">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                Processing payment...
                            </div>
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- Tickets Section (Shown only after successful payment) -->
                <div class="card booking-card">
                    <div class="card-header">
                        <h3 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Your Tickets</h3>
                    </div>
                    <div class="card-body">
                        @{
                            var ticketCounter = 1;
                        }
                        @foreach (var detail in Model.BookingDetails)
                        {
                            foreach (var ticket in detail.Tickets)
                            {
                                <div class="ticket-container">
                                    <div class="ticket-header">
                                        <h5 class="mb-0">@detail.TicketCategory.CategoryName</h5>
                                        <span class="ticket-number-badge">Ticket #@ticketCounter</span>
                                    </div>
                                    <div class="ticket-preview" id="ticket-image-@ticketCounter">
                                        <div class="loading-placeholder"></div>
                                        <p class="text-muted mt-2">Generating ticket image...</p>
                                    </div>
                                </div>
                                ticketCounter++;
                            }
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="sidebar-actions">
                @if (!hasPaymentPending)
                {
                    <div class="card booking-card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-download me-2"></i>Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @foreach (var detail in Model.BookingDetails)
                                {
                                    foreach (var ticket in detail.Tickets)
                                    {
                                        <button class="btn btn-outline-secondary btn-sm" onclick="downloadTicket('@ticket.TicketNumber')">
                                            <i class="fas fa-file-pdf me-1"></i>Download @ticket.TicketNumber
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }

                <div class="card booking-card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Important Information</h5>
                    </div>
                    <div class="card-body">
                        @if (hasPaymentPending)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Payment Required</strong><br>
                                Complete your payment within 15 minutes to secure your tickets.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>Payment Confirmed</strong><br>
                                Your tickets are now ready for use.
                            </div>
                        }
                        
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><i class="fas fa-mobile-alt me-2 text-primary"></i>Show tickets on your mobile device</li>
                            <li class="mb-2"><i class="fas fa-print me-2 text-primary"></i>Print tickets for backup</li>
                            <li class="mb-2"><i class="fas fa-clock me-2 text-primary"></i>Arrive 30 minutes early</li>
                            <li><i class="fas fa-id-card me-2 text-primary"></i>Bring valid ID</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/BookingConfirmation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize BookingConfirmation
            const ticketData = @Html.Raw(Json.Serialize(Model.BookingDetails.SelectMany(d => d.Tickets).Select((t, index) => new {
                ticketNumber = t.TicketNumber,
                qrCode = t.QRCode,
                eventName = Model.Event.EventName,
                category = Model.BookingDetails.First(d => d.Tickets.Contains(t)).TicketCategory.CategoryName,
                date = Model.Event.EventDate.ToString("MMM dd, yyyy h:mm tt"),
                venue = Model.Event.Venue?.VenueName ?? "TBA",
                price = Model.BookingDetails.First(d => d.Tickets.Contains(t)).UnitPrice.ToString("F2")
            })));

            window.bookingConfirmation = new BookingConfirmation({
                hasPaymentPending: @Json.Serialize(hasPaymentPending),
                bookingId: @Model.BookingId,
                finalAmount: @Model.FinalAmount,
                tickets: ticketData,
                downloadTicketUrl: '@Url.Action("DownloadTicket", "Booking")',
                emailTicketsUrl: '@Url.Action("EmailTickets", "Booking")',
                homeUrl: '@Url.Action("Index", "Home")'
            });
        });

        // Cleanup on page unload
        window.addEventListener('beforeunload', function () {
            if (window.bookingConfirmation) {
                window.bookingConfirmation.destroy();
            }
        });
    </script>
}