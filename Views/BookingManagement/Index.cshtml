@model StarTickets.Models.ViewModels.AdminBookingListViewModel
@{
    ViewData["Title"] = "Booking Management";
    Layout = "~/Views/Shared/CustomLayouts/_BookingManagement.cshtml";
}

<div class="content-area">
    <h1 class="page-title">
        <i class="fas fa-ticket-alt"></i>
        Booking Management
    </h1>

    <div class="action-bar d-flex justify-content-between align-items-center mb-3">
        <form method="get" class="d-flex gap-2">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="text" name="search" class="form-control" value="@Model.Search" placeholder="Search by ref, customer, event" />
            </div>
            <select name="paymentStatus" class="form-select">
                <option value="">All Payments</option>
                @foreach (var p in Enum.GetValues(typeof(StarTickets.Models.PaymentStatus)).Cast<StarTickets.Models.PaymentStatus>())
                {
                    <option value="@p" selected="@(Model.PaymentStatusFilter == p ? "selected" : null)">@p</option>
                }
            </select>
            <select name="bookingStatus" class="form-select">
                <option value="">All Bookings</option>
                @foreach (var s in Enum.GetValues(typeof(StarTickets.Models.BookingStatus)).Cast<StarTickets.Models.BookingStatus>())
                {
                    <option value="@s" selected="@(Model.BookingStatusFilter == s ? "selected" : null)">@s</option>
                }
            </select>
            <button class="btn btn-primary" type="submit">Filter</button>
        </form>
    </div>

    <div class="dashboard-card">
        <div class="card-body">
            @if (Model.Bookings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Ref</th>
                                <th>Customer</th>
                                <th>Event</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Payment</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in Model.Bookings)
                            {
                                <tr>
                                    <td>@b.BookingReference</td>
                                    <td>@(b.Customer != null ? ($"{b.Customer.FirstName} {b.Customer.LastName}") : "-")</td>
                                    <td>@b.Event?.EventName</td>
                                    <td>@b.BookingDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@b.FinalAmount.ToString("C")</td>
                                    <td><span class="badge bg-secondary">@b.PaymentStatus</span></td>
                                    <td>
                                        @if (b.Status == StarTickets.Models.BookingStatus.Active)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = b.BookingId })">
                                            <i class="fas fa-eye"></i>
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav class="pagination-nav">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { search = Model.Search, paymentStatus = Model.PaymentStatusFilter, bookingStatus = Model.BookingStatusFilter, page = Model.CurrentPage - 1 })">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : null)">
                                    <a class="page-link" href="@Url.Action("Index", new { search = Model.Search, paymentStatus = Model.PaymentStatusFilter, bookingStatus = Model.BookingStatusFilter, page = i })">@i</a>
                                </li>
                            }
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { search = Model.Search, paymentStatus = Model.PaymentStatusFilter, bookingStatus = Model.BookingStatusFilter, page = Model.CurrentPage + 1 })">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-3">
                        <i class="fas fa-ticket-alt fa-2x"></i>
                    </div>
                    <h4>No bookings found</h4>
                    <p class="text-muted">Try adjusting your filters or search term.</p>
                </div>
            }
        </div>
    </div>
</div>


